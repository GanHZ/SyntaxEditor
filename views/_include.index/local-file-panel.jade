.local-file-panel
	.title local file
	button.add(v-on='click: onAdd') +add
	ul
		li(v-repeat='file : files' v-class='open : file.open' v-on='click: onOpen, dblclick: onRename')
			i.fa.fa-file-text-o
			span {{file.name}}
			a.fa.fa-times.remove.pull-right(href='javascript:', v-on='click: onRemove')